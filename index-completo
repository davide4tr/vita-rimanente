<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Calcolatore Vita Rimanente</title>
  <style>
    body { font-family: sans-serif; max-width: 700px; margin: auto; padding: 20px; }
    label, select, input { display: block; margin-top: 10px; }
    button { margin-top: 20px; padding: 10px; font-size: 16px; }
    .result { margin-top: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <h1>Calcolatore Vita Rimanente</h1>

  <label>Età: <input type="number" id="eta" /></label>
  <label>Genere:
    <select id="genere">
      <option value="maschio">Maschio</option>
      <option value="femmina">Femmina</option>
    </select>
  </label>
  <label>Stile di vita:
    <select id="stile">
      <option value="sano">Molto sano</option>
      <option value="medio">Normale</option>
      <option value="scarso">Poco sano</option>
    </select>
  </label>
  <label>Fumo: <select id="fumo">
    <option value="no">Non fumo</option>
    <option value="moderato">Moderato</option>
    <option value="frequente">Frequente</option>
  </select></label>

  <label>Alcol: <select id="alcol">
    <option value="no">Mai o raramente</option>
    <option value="moderato">Moderato</option>
    <option value="frequente">Frequente</option>
  </select></label>

  <label>Droghe: <select id="droghe">
    <option value="no">No</option>
    <option value="qualche">Qualche volta</option>
    <option value="spesso">Spesso</option>
  </select></label>

  <label>Malattie croniche:
    <select id="malattie">
      <option value="no">Nessuna</option>
      <option value="lievi">Lieve</option>
      <option value="gravi">Gravi</option>
    </select>
  </label>

  <label>Genetica familiare:
    <select id="genetica">
      <option value="ottima">Ottima (nonni longevi)</option>
      <option value="media">Normale</option>
      <option value="debole">Debole</option>
    </select>
  </label>

  <label>Obesità/Sovrappeso:
    <select id="peso">
      <option value="normale">Normale</option>
      <option value="sovrappeso">Sovrappeso</option>
      <option value="obeso">Obeso</option>
    </select>
  </label>

  <button onclick="calcola()">Calcola</button>
  <div class="result" id="risultato"></div>

  <script>
    function calcola() {
      let base = 82;
      const eta = parseInt(document.getElementById("eta").value);
      const stile = document.getElementById("stile").value;
      const fumo = document.getElementById("fumo").value;
      const alcol = document.getElementById("alcol").value;
      const droghe = document.getElementById("droghe").value;
      const malattie = document.getElementById("malattie").value;
      const genetica = document.getElementById("genetica").value;
      const peso = document.getElementById("peso").value;

      if (stile === "scarso") base -= 6;
      if (stile === "medio") base -= 2;

      if (fumo === "moderato") base -= 3;
      else if (fumo === "frequente") base -= 7;

      if (alcol === "moderato") base -= 1;
      else if (alcol === "frequente") base -= 4;

      if (droghe === "qualche") base -= 2;
      else if (droghe === "spesso") base -= 6;

      if (malattie === "lievi") base -= 3;
      else if (malattie === "gravi") base -= 8;

      if (genetica === "media") base -= 2;
      else if (genetica === "debole") base -= 4;

      if (peso === "sovrappeso") base -= 2;
      else if (peso === "obeso") base -= 5;

      const rimanenti = Math.max(base - eta, 0);
      document.getElementById("risultato").innerText = `Ti restano circa ${rimanenti} anni di vita, secondo i dati inseriti.`;
    }
  </script>
</body>
</html>
